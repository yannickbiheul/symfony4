{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h1 class="my-5 text-center">Projets</h1>
        <div class="text-center mb-3">
            <a href="{{ path('admin_projects_new') }}" class="btn btn-success text-white mb-3">
                <i class="fas fa-plus"></i> 
                Créer un nouveau projet
            </a>
        </div>
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Introduction</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for project in projects %}
                    <tr>
                        <td>{{ project.id }}</td>
                        <td>{{ project.title }}</td>
                        <td>{{ project.introduction }}</td>
                        <td>
                            <a href="{{ path('admin_projects_edit', {'id': project.id}) }}" class="btn btn-warning">
                                <i class="fas fa-edit"></i> 
                                Éditer
                            </a>
                            <a href="{{ path('admin_projects_delete', {'id': project.id}) }}" class="btn btn-danger">
                                <i class="fas fa-trash"></i> 
                                Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}